# Manage window size
ctrl + cmd - h : yabai -m window --resize left:-20:0
ctrl + cmd - j : yabai -m window --resize top:0:20
ctrl + cmd - k : yabai -m window --resize top:0:-20
ctrl + cmd - l : yabai -m window --resize left:20:0

# Focus window
ctrl - h : yabai -m window --focus west
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - l : yabai -m window --focus east

# Warp winodw
alt - h : yabai -m window --warp west
alt - j : yabai -m window --waep south
alt - k : yabai -m window --warp north
alt - l : yabai -m window --warp east

# Change window
shift + cmd - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + cmd - 3 : yabai -m window --space  3; yabai -m space --focus 3

# toggle window zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# Open terminal
cmd - return : open -a Alacritty --new
